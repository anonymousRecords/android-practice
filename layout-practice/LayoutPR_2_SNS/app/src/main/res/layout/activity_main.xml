<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="3dp"
        >
        <ImageView
            android:id="@+id/nav_logo"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:background="@drawable/logo"
            />
        <EditText
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:hint="친구를 찾아보세요"
            />
        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/settings"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/main_img"
        />
    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/heart"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/btn_conversation"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/conversation"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="오늘은 레이아웃으로 SNS 화면을 만들어보았습니다."
        android:background="@color/purple_200"
        />
    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/comments_user"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/user"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/comments_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="찹도:"
            />
        <TextView
            android:id="@+id/comments_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="CSS 덕택이다"
            />
    </LinearLayout>

</LinearLayout>